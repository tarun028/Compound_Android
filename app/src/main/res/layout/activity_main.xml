<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:fontFamily="@font/poppinsblack"
        android:text="Compound"
        android:textColor="#ffff"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/help"
        android:background="@drawable/back_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Help"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="#964B00"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/graph1"
                layout_alignParentLeft="true"
                android:layout_width="355dp"
                android:layout_height="175dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:clickable="true"

                app:cardCornerRadius="20dp"
                app:cardElevation="15dp"

                >
                <ImageView
                    android:src="@drawable/back_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"

                    >
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/pehla"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="22dp"
                        android:text="13% p.a Low Risk Balanced Money"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/graph2"
                android:layout_width="355dp"
                android:layout_height="165dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="15dp"

                >
                <ImageView
                    android:src="@drawable/back_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"

                    >
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/dusra"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="22dp"
                        android:text="16% p.a Moderate Risk,Growing Money "
                        android:textColor="#fff"
                        android:textSize="23sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/graph3"
                android:clickable="true"
                android:layout_width="355dp"
                android:layout_height="165dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="15dp"

                >
                <ImageView
                    android:src="@drawable/back_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"

                    >

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="155dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/tesra"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="1"
                        android:text="18% p.a High Risk But Aggressive Gains"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="500dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"

            app:cardCornerRadius="15dp">

            <ImageView
                android:src="@drawable/back_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_baseline_pie_chart_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Assets Detail"
                    android:textColor="#FBF6F6"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="#343434"
            app:cardCornerRadius="15dp">

            <ImageView
                android:src="@drawable/back_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_lightbulb_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Why Us ?"
                    android:textColor="#FBF6F6"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="#343434"
            app:cardCornerRadius="15dp">
            <ImageView
                android:src="@drawable/back_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_question_mark_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="FAQ"
                    android:textColor="#FBF6F6"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="160dp"
        android:text="START INVESTING"
        android:fontFamily="@font/poppinsmedium"
        android:background="@drawable/back_selector"
        android:textColor="#964B00"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />




</androidx.constraintlayout.widget.ConstraintLayout>